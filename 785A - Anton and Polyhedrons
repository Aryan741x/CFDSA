#include<iostream>
using namespace std;
int main(){
    int t;
    cin>>t;
    int sum=0;
    while(t--){
        string str;
        cin>>str;
        if(str[0]=='T'){
            sum+=4;
        }
        if(str[0]=='C'){
            sum+=6;
        }
        if(str[0]=='O'){
            sum+=8;
        }
        if(str[0]=='D'){
            sum+=12;
        }
        if(str[0]=='I'){
            sum+=20;
        }
    }
    cout<<sum<<endl;
}
